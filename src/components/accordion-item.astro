---
export interface AccordionItemProps {
  question: string;
  defaultOpen?: boolean;
}

const { question, defaultOpen = false } = Astro.props as AccordionItemProps;
---

<details
  class="accordion border-brand-secondary-border open:border-brand-secondary border-l-2 bg-transparent px-4 py-4 transition-colors duration-300 ease-out"
  open={defaultOpen}
>
  <summary
    class="text-brand-ink marker:text-brand-secondary cursor-pointer text-base leading-snug font-semibold"
  >
    {question}
  </summary>
  <div class="accordion-collapse">
    <div class="text-brand-body mt-3 text-sm leading-relaxed">
      <slot />
    </div>
  </div>
</details>
