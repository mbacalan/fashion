---
import Header from "./header.astro";

interface Props {
  active: "home" | "about" | "services";
  contentClass?: string;
  mainClass?: string;
  mainId?: string;
}

const {
  active,
  contentClass = "flex flex-col gap-10",
  mainClass = "",
  mainId,
} = Astro.props as Props;

const mainClasses = ["flex-1 px-5 py-8 sm:px-8", mainClass]
  .filter(Boolean)
  .join(" ");

const containerClasses = ["mx-auto w-full", contentClass]
  .filter(Boolean)
  .join(" ");
---

<div class="flex flex-1 flex-col">
  <Header active={active} />
  <main id={mainId} class={mainClasses}>
    <div class={containerClasses}>
      <slot />
    </div>
  </main>
</div>
