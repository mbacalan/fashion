---
const interests = ["Editorial Styling", "Personal Wardrobe"];

interface Props {
  title?: string;
  header?: string;
  subtext?: string;
}

const { title, header, subtext } = Astro.props as Props;

const showText = title?.length || header?.length || subtext?.length;
---

<div
  class="w-full rounded-3xl border-0 bg-transparent p-4 shadow-none sm:border sm:border-brand-lavender-ring/90 sm:bg-brand-lavender-bg sm:p-12 sm:shadow-[0_20px_48px_rgba(31,42,36,0.08)]"
>
  {
    showText ? (
      <div class="mb-10 space-y-4">
        <p class="text-brand-secondary text-xs font-medium tracking-[0.3em] uppercase">
          {title}
        </p>
        <h2 class="text-3xl font-semibold tracking-tight text-neutral-950 sm:text-4xl">
          {header}
        </h2>
        <p class="text-brand-ink-muted text-base leading-relaxed">{subtext}</p>
      </div>
    ) : null
  }

  <form method="post" class="grid w-full gap-8 sm:gap-10">
    <div class="grid gap-6 sm:grid-cols-2">
      <label class="flex flex-col gap-2 text-sm font-medium text-neutral-950">
        <span>First name</span>
        <input
          type="text"
          name="first-name"
          placeholder="Sasha"
          class="w-full rounded-2xl border border-slate-200 bg-white px-4 py-3 text-base text-neutral-950 shadow-sm focus:border-brand-primary focus:outline-none focus:ring-4 focus:ring-brand-primary/20"
        />
      </label>
      <label class="flex flex-col gap-2 text-sm font-medium text-neutral-950">
        <span>Surname</span>
        <input
          type="text"
          name="surname"
          placeholder="Ruiz"
          class="w-full rounded-2xl border border-slate-200 bg-white px-4 py-3 text-base text-neutral-950 shadow-sm focus:border-brand-primary focus:outline-none focus:ring-4 focus:ring-brand-primary/20"
        />
      </label>
      <label class="flex flex-col gap-2 text-sm font-medium text-neutral-950">
        <span>Email</span>
        <input
          type="email"
          name="email"
          placeholder="you@example.com"
          class="w-full rounded-2xl border border-slate-200 bg-white px-4 py-3 text-base text-neutral-950 shadow-sm focus:border-brand-primary focus:outline-none focus:ring-4 focus:ring-brand-primary/20"
        />
      </label>
      <label class="flex flex-col gap-2 text-sm font-medium text-neutral-950">
        <span>Occupation</span>
        <input
          type="text"
          name="occupation"
          placeholder="Creative director"
          class="w-full rounded-2xl border border-slate-200 bg-white px-4 py-3 text-base text-neutral-950 shadow-sm focus:border-brand-primary focus:outline-none focus:ring-4 focus:ring-brand-primary/20"
        />
      </label>
      <label class="flex flex-col gap-2 text-sm font-medium text-neutral-950">
        <span>Location</span>
        <input
          type="text"
          name="location"
          placeholder="Barcelona, ES"
          class="w-full rounded-2xl border border-slate-200 bg-white px-4 py-3 text-base text-neutral-950 shadow-sm focus:border-brand-primary focus:outline-none focus:ring-4 focus:ring-brand-primary/20"
        />
      </label>
      <label class="flex flex-col gap-2 text-sm font-medium text-neutral-950">
        <span>Age</span>
        <input
          type="number"
          name="age"
          placeholder="32"
          min="0"
          class="w-full rounded-2xl border border-slate-200 bg-white px-4 py-3 text-base text-neutral-950 shadow-sm focus:border-brand-primary focus:outline-none focus:ring-4 focus:ring-brand-primary/20"
        />
      </label>
    </div>
    <div>
      <span class="mb-3 block text-sm font-medium text-neutral-950"
        >Services of interest</span
      >
      <div class="flex flex-wrap gap-3">
        {
          interests.map((interest) => (
            <label class="cursor-pointer">
              <input
                type="radio"
                id="services"
                name="services"
                value={interest}
                class="peer sr-only"
              />
              <span class="border-brand-secondary-ring bg-brand-secondary-soft text-brand-secondary-ink peer-checked:border-brand-secondary peer-checked:bg-brand-secondary peer-focus-visible:outline-brand-secondary/60 inline-flex items-center gap-2 rounded-full border px-4 py-2 text-xs font-medium tracking-[0.26em] uppercase transition-colors duration-150 ease-out peer-checked:text-white peer-focus-visible:outline peer-focus-visible:outline-2 peer-focus-visible:outline-offset-2">
                {interest}
              </span>
            </label>
          ))
        }
      </div>
    </div>
    <label class="flex flex-col gap-2 text-sm font-medium text-neutral-950">
      <span
        >Additional information <span class="text-slate-500">(optional)</span
        ></span
      >
      <textarea
        name="additional-info"
        rows="4"
        placeholder="Share timelines, inspirations, or collaborators we should meet."
        class="w-full rounded-2xl border border-slate-200 bg-white px-4 py-3 text-base text-neutral-950 shadow-sm focus:border-brand-primary focus:outline-none focus:ring-4 focus:ring-brand-primary/20"
      ></textarea>
    </label>
    <div class="flex flex-wrap items-center gap-4">
      <button
        type="submit"
        class="bg-brand-primary hover:bg-brand-primary-deep focus-visible:outline-brand-secondary/60 inline-flex items-center justify-center rounded-full px-6 py-3 text-sm font-semibold tracking-[0.28em] text-white uppercase shadow-[0_18px_32px_rgba(31,42,36,0.12)] transition hover:-translate-y-0.5 focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2"
      >
        Request consult
      </button>
    </div>
  </form>
</div>
