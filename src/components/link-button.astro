---
import type { HTMLAttributes } from "astro/types";

interface Props extends HTMLAttributes<"a"> {
  href: string;
  text: string;
}

const { href, text, target, referrerpolicy } = Astro.props;
---

<div class="pt-3">
  <a
    href={href}
    target={target ?? "_blank"}
    referrerpolicy={referrerpolicy ?? "same-origin"}
    class="border-brand-primary/50 bg-brand-primary-soft text-brand-primary hover:border-brand-primary hover:bg-brand-accent focus-visible:outline-brand-secondary/50 inline-flex items-center gap-3 border px-5 py-2 text-sm font-semibold tracking-[0.14em] uppercase transition focus-visible:outline"
  >
    <span>{text}</span>
    <span aria-hidden="true">â†’</span>
  </a>
</div>
