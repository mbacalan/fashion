---
import type { HTMLAttributes } from "astro/types";

interface Props extends HTMLAttributes<"a"> {
  href: string;
  text: string;
}

const { href, text, target, referrerpolicy } = Astro.props;
---

<div class="flex flex-col gap-3 pt-2 sm:flex-row sm:flex-wrap">
  <a
    href={href}
    target={target ?? "_blank"}
    referrerpolicy={referrerpolicy ?? "same-origin"}
    class="bg-brand-primary hover:bg-brand-primary-deep focus-visible:outline-brand-secondary/60 inline-flex w-full items-center justify-center rounded-full px-5 py-3 text-xs font-semibold tracking-[0.18em] text-white uppercase shadow-[0_18px_32px_rgba(31,42,36,0.12)] transition hover:-translate-y-0.5 focus-visible:outline focus-visible:outline-offset-2 sm:w-auto sm:px-6 sm:text-sm sm:tracking-[0.28em]"
  >
    {text}
  </a>
</div>
