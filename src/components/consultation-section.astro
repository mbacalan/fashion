---
import ConsultationForm from "./consultation-form.astro";

interface Props {
  id?: string;
  title?: string;
  header?: string;
  subtext?: string;
}

const {
  id = "consultation-form",
  title,
  header,
  subtext,
} = Astro.props as Props;
---

<section
  id={id}
  class="relative isolate w-full max-w-5xl self-center overflow-hidden rounded-[2.75rem] bg-gradient-to-br from-white via-brand-lavender-bg to-brand-rose px-5 py-12 shadow-[0_30px_80px_rgba(31,42,36,0.1)] ring-1 ring-brand-lavender-ring/80 sm:px-12 sm:py-14"
>
  <div class="pointer-events-none absolute -inset-32 bg-gradient-to-br from-brand-primary/15 via-transparent to-brand-secondary/15 blur-3xl"></div>
  <div class="relative">
    <ConsultationForm title={title} header={header} subtext={subtext} />
  </div>
</section>
