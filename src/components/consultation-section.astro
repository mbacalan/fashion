---
import ConsultationForm from "./consultation-form.astro";

interface Props {
  id?: string;
  title?: string;
  header?: string;
  subtext?: string;
}

const {
  id = "consultation-form",
  title,
  header,
  subtext,
} = Astro.props as Props;
---

<section
  id={id}
  class="via-brand-lavender-bg to-brand-rose ring-brand-lavender-ring/80 relative isolate w-full max-w-5xl self-center overflow-hidden rounded-[2.75rem] bg-gradient-to-br from-white px-6 py-14 shadow-[0_30px_80px_rgba(31,42,36,0.1)] ring-1 sm:px-12"
>
  <div
    class="from-brand-primary/15 to-brand-secondary/15 pointer-events-none absolute -inset-32 bg-gradient-to-br via-transparent blur-3xl"
  >
  </div>
  <div class="relative">
    <ConsultationForm title={title} header={header} subtext={subtext} />
  </div>
</section>
