---
import Navigation from "./navigation.astro";

interface Props {
  active: "qa" | "about" | "styling";
}

const { active } = Astro.props as Props;
---

<header
  class="border-brand-secondary-border/70 bg-brand-accent border-b p-6 sm:px-10"
>
  <div class="mx-auto flex max-w-6xl flex-col gap-6">
    <div
      class="flex flex-col gap-4 sm:flex-row sm:items-center sm:justify-between"
    >
      <h1
        class="text-brand-ink text-3xl leading-tight font-semibold sm:text-4xl md:text-5xl"
      >
        <a href="/" class="hover:underline"> White Poplin Shirt </a>
      </h1>

      <div class="w-full sm:w-auto">
        <Navigation active={active} />
      </div>
    </div>
  </div>
</header>
