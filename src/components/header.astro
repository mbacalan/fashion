---
import SiteNav from "./site-nav.astro";

interface Props {
  active: "home" | "qa" | "about" | "styling";
}

const { active } = Astro.props as Props;
---

<header
  class="border-brand-secondary-border/70 bg-brand-accent border-b p-6 sm:px-10"
>
  <div
    class="mx-auto grid max-w-6xl gap-6 md:grid-cols-1 md:items-end"
  >
    <div class="flex flex-col items-stretch gap-6">
      <h1
        class="text-brand-ink text-4xl leading-tight font-semibold sm:text-5xl"
      >
        White Poplin Shirt
      </h1>

      <SiteNav active={active} />
    </div>
  </div>
</header>
