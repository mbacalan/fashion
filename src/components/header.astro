---
import SiteNav from "./site-nav.astro";

interface Props {
  active: "home" | "qa" | "about" | "consultation";
}

const { active } = Astro.props as Props;
---

<header
  class="border-brand-rose border-b bg-white px-6 pt-10 pb-8 shadow-[0_12px_28px_rgba(31,42,36,0.08)] sm:px-10"
>
  <div
    class="mx-auto flex max-w-6xl flex-col gap-6 sm:flex-row sm:items-center sm:justify-between"
  >
    <div class="flex items-center gap-4">
      <div
        class="border-brand-primary/30 bg-brand-primary-soft text-brand-primary flex size-12 items-center justify-center rounded-full border text-sm font-semibold tracking-[0.22em] uppercase"
      >
        WP
      </div>
      <div>
        <span
          class="text-brand-primary block text-2xl font-semibold tracking-[0.24em] uppercase"
          >White Poplin</span
        >
        <span
          class="text-brand-secondary block text-sm tracking-[0.22em] uppercase"
          >Shirt</span
        >
      </div>
    </div>
    <div class="w-full sm:flex sm:w-auto sm:justify-end">
      <SiteNav active={active} />
    </div>
  </div>
</header>
