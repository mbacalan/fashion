---
import SiteNav from "./site-nav.astro";

interface Props {
  active: "home" | "qa" | "about" | "consultation";
}

const { active } = Astro.props as Props;
---

<header
  class="border-brand-secondary-border/70 bg-brand-accent border-b px-6 py-8 sm:px-10"
>
  <div
    class="mx-auto grid max-w-6xl gap-6 md:grid-cols-[1.2fr_auto] md:items-end"
  >
    <div class="space-y-4">
      <div class="space-y-2">
        <h1
          class="text-brand-ink text-4xl leading-tight font-semibold sm:text-5xl"
        >
          White Poplin Shirt
        </h1>
      </div>
      <a
        href="https://instagram.com"
        target="_blank"
        rel="noreferrer"
        class="bg-brand-secondary text-brand-background-end hover:bg-brand-secondary-pop focus-visible:outline-brand-primary inline-flex max-w-max items-center gap-3 rounded-full px-5 py-2 text-sm font-semibold tracking-[0.16em] uppercase transition focus-visible:outline focus-visible:outline-2"
      >
        Instagram'da İlham
        <span aria-hidden="true">→</span>
      </a>
    </div>

    <div class="flex flex-col items-stretch gap-6 text-right">
      <SiteNav active={active} />
    </div>
  </div>
</header>
