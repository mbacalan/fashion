---
interface SiteNavProps {
  active: "home" | "qa" | "about";
}

const { active } = Astro.props as SiteNavProps;

const linkClasses = (key: SiteNavProps["active"]) =>
  [
    "inline-flex items-center justify-end gap-2 rounded-full border px-4 py-1.5 text-sm font-semibold uppercase tracking-[0.12em] transition",
    active === key
      ? "border-brand-secondary bg-brand-secondary text-brand-background-end"
      : "border-transparent text-brand-body hover:border-brand-primary/40 hover:bg-brand-primary-soft hover:text-brand-primary",
  ].join(" ");
---

<nav
  aria-label="Site navigation"
  class="text-brand-body text-sm font-medium tracking-[0.08em] uppercase"
>
  <ul class="flex flex-col gap-2 sm:items-end">
    <li>
      <a href="/" class={linkClasses("home")}>Ana Sayfa</a>
    </li>
    <li>
      <a href="/about" class={linkClasses("about")}>Hakkımızda</a>
    </li>
    <li>
      <a href="/q-and-a" class={linkClasses("qa")}>Soru-Cevap</a>
    </li>
  </ul>
</nav>
