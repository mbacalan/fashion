---
interface SiteNavProps {
  active: "home" | "qa" | "about";
}

const { active } = Astro.props as SiteNavProps;

const linkClasses = (key: SiteNavProps["active"]) =>
  [
    "relative inline-flex items-center rounded-md px-3 py-1 text-[0.78rem] uppercase tracking-[0.22em] transition-colors",
    active === key
      ? "bg-brand-primary-soft text-brand-primary shadow-inner"
      : "text-brand-body hover:text-brand-primary",
  ].join(" ");
---

<nav
  class="text-brand-body text-[0.78rem] font-medium tracking-[0.22em] uppercase"
>
  <ul class="flex flex-wrap gap-3 sm:justify-end sm:gap-4">
    <li>
      <a href="/" class={linkClasses("home")}>Home</a>
    </li>
    <li>
      <a href="/about" class={linkClasses("about")}>About</a>
    </li>
    <li>
      <a href="/q-and-a" class={linkClasses("qa")}>Q&amp;A</a>
    </li>
  </ul>
</nav>
