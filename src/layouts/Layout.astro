---
import "../styles/global.css";
import Footer from "../components/footer.astro";

const { title = "White Poplin Shirt" } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
  </head>
  <body
    class="bg-brand-background-start text-brand-ink md:from-brand-background-start md:to-brand-background-end scroll-smooth antialiased md:bg-gradient-to-br"
  >
    <slot />

    <Footer />
  </body>
</html>

<style>
  html,
  body {
    margin: 0;
    width: 100%;
    height: 100%;
  }
</style>
