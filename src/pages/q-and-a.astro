---
import AccordionItem from "../components/accordion-item.astro";
import PageWrapper from "../components/page-wrapper.astro";
import Layout from "../layouts/base-layout.astro";

const faqs = [
  {
    question:
      "Danışmanlık formunu gönderdikten sonra ne kadar sürede geri dönüş alırım?",
    answer:
      "En geç iki iş günü içinde, sonraki adımları ve olası ek soruları içeren size özel ve gezegen dostu bir yanıt paylaşıyoruz.",
  },
  {
    question: "Moda başkentlerinin dışında müşterilerle çalışıyor musunuz?",
    answer:
      "Kesinlikle. Çoğu iş birliğimiz uzaktan başlıyor ve proje büyüdükçe yolculuklarımızı düşük emisyonlu rotalara göre planlayarak size ulaşıyoruz.",
  },
  {
    question: "Tipik bir iş birliği nasıl ilerliyor?",
    answer:
      "Her ortaklık benzersizdir; genellikle keşif oturumu, ilham panosu değerlendirmesi, provalar ya da yaratıcı atölyeler ve tam stil dosyalarının teslimi ile ilerler.",
  },
];
---

<Layout title="White Poplin Shirt — Soru-Cevap">
  <PageWrapper active="qa">
    <section class="space-y-8">
      <div class="max-w-3xl space-y-4">
        <p
          class="text-brand-secondary text-xs font-medium tracking-[0.16em] uppercase"
        >
          Sorular &amp; Yanıtlar
        </p>
        <h1 class="text-4xl font-semibold tracking-tight text-brand-ink">
          Bizimle sürdürülebilir bir projeye başlamak için bilmeniz gereken her
          şey.
        </h1>
      </div>

      <ul class="space-y-3">
        {
          faqs.map((faq, index) => (
            <li>
              <AccordionItem question={faq.question} defaultOpen={index === 0}>
                <p>{faq.answer}</p>
              </AccordionItem>
            </li>
          ))
        }
      </ul>
    </section>
  </PageWrapper>
</Layout>
