---
import Layout from "../layouts/base-layout.astro";
import PageWrapper from "../components/page-wrapper.astro";
import LinkButton from "../components/link-button.astro";

type Service = {
  tagline: string;
  title: string;
  teaser: string;
  detail: string;
  highlights: string[];
  imageLabel: string;
};

const services: Service[] = [
  {
    tagline: "İmza Hizmet 01",
    title: "Podyuma Hazır Stil Kürasyonu",
    teaser:
      "Stüdyomuzun vizyonunu günlük giyime taşıyan, mevsimsiz ve sürdürülebilir bir gardırop hikâyesi yazıyoruz.",
    detail:
      "Her kombini için hikâye panoları kurguluyor, dokuları özenle katmanlıyor ve etik üreticilerden seçtiğimiz aksesuarlarla lansmanınızı ya da yenilenmenizi tamamlıyoruz.",
    highlights: ["Renk paleti haritalama", "Görsel hikaye kürasyonu"],
    imageLabel: "Yer tutucu görsel — Editoryal kolaj",
  },
  {
    tagline: "İmza Hizmet 02",
    title: "Kampanya Yaratıcı Yönü",
    teaser:
      "Trend döngülerine yetişen fakat bütünüyle size ait kalan sürdürülebilir bir lansman deneyimi kurguluyoruz.",
    detail:
      "Kadro brieflerinden set düzenine kadar her adımı; baskı, sosyal medya ve podyumda ritmimizi koruyacak şekilde, düşük etki stratejileriyle orkestre ediyoruz.",
    highlights: ["Konsept ilham panoları", "Kadro planlama desteği"],
    imageLabel: "Yer tutucu görsel — Stüdyo ışık düzeni",
  },
];
---

<Layout title="White Poplin Shirt — Styling">
  <PageWrapper active="styling">
    <section class="space-y-12">
      <div class="max-w-3xl space-y-4">
        <h1 class="text-brand-ink text-4xl font-semibold tracking-tight">
          Bizimle sürdürülebilir bir projeye başlamak için bilmeniz gereken her
          şey.
        </h1>
        <p class="text-brand-body text-base leading-relaxed">
          Atölyemize dair en sık duyduğumuz soruları, gezegen dostu moda
          yolculuğunuzun ilk adımlarını kolaylaştırmak için derledik.
        </p>
      </div>

      <div class="space-y-14">
        {
          services.map((service, index) => {
            const isOdd = index % 2 === 1;
            const accentBorder = isOdd
              ? "border-brand-secondary"
              : "border-brand-primary";
            const collageTone = isOdd
              ? "border-brand-secondary-border bg-brand-secondary-wash"
              : "border-brand-rose-ring bg-brand-rose";
            const badgeTone = isOdd
              ? "bg-brand-secondary text-brand-background-end"
              : "bg-brand-primary text-brand-background-end";

            const indexLabel = `${(index + 1).toString().padStart(2, "0")}`;

            return (
              <article
                class={`relative grid gap-8 border-l-4 ${accentBorder} pl-6 lg:grid-cols-[1fr_1.1fr] lg:gap-12`}
              >
                <span
                  class={`text-brand-background-end absolute top-4 -left-6 flex h-12 w-12 items-center justify-center rounded-full text-base font-semibold tracking-[0.12em] uppercase ${badgeTone}`}
                >
                  {indexLabel}
                </span>
                <div class="order-2 space-y-4 lg:order-1">
                  <p class="text-brand-secondary text-sm font-semibold tracking-[0.14em] uppercase">
                    {service.tagline}
                  </p>
                  <h2 class="text-brand-ink text-3xl font-semibold tracking-tight sm:text-[2.5rem]">
                    {service.title}
                  </h2>
                  <p class="text-brand-ink-strong text-base leading-relaxed">
                    {service.teaser}
                  </p>
                  <p class="text-brand-body text-base leading-relaxed">
                    {service.detail}
                  </p>
                  <ul class="text-brand-body list-disc space-y-1 pl-5 text-sm">
                    {service.highlights.map((highlight) => (
                      <li>{highlight}</li>
                    ))}
                  </ul>
                  <LinkButton
                    href={import.meta.env.CALENDAR_URL}
                    text="Şimdi Randevu Al"
                  />
                </div>

                <div class="order-1 lg:order-2">
                  <figure
                    class={`relative aspect-[4/3] overflow-hidden border ${collageTone}`}
                  >
                    <div class="absolute inset-4 flex flex-col justify-between gap-4">
                      <div class="flex gap-4">
                        <div class="border-brand-primary/30 bg-brand-primary-soft h-24 flex-1 border" />
                        <div class="border-brand-secondary-border bg-brand-secondary-wash h-24 w-20 border" />
                      </div>
                      <div class="flex gap-4">
                        <div class="border-brand-secondary-border h-16 w-24 border bg-white/40" />
                        <div class="border-brand-primary/30 h-16 flex-1 border border-dashed" />
                      </div>
                    </div>
                    <figcaption class="text-brand-body/80 absolute bottom-5 left-5 text-xs tracking-[0.16em] uppercase">
                      {service.imageLabel}
                    </figcaption>
                  </figure>
                </div>
              </article>
            );
          })
        }
      </div>
    </section>
  </PageWrapper>
</Layout>
