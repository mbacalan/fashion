---
import ConsultationForm from "../components/consultation-form.astro";
import PageWrapper from "../components/page-wrapper.astro";
import Layout from "../layouts/layout.astro";

const services = [
  {
    tagline: "Signature Service 01",
    title: "Runway Ready Styling",
    teaser:
      "Craft a seasonless wardrobe narrative with silhouettes that translate studio vision to everyday wear.",
    detail:
      "We storyboard each look, layer textures with intention, and source accessories that bring cohesion to your debut or refresh.",
    highlights: ["Palette mapping", "Lookbook curation", "Accessory sourcing"],
    imageLabel: "Placeholder image — Editorial collage",
    gradient:
      "from-brand-primary/80 via-brand-primary-pop/60 to-brand-secondary/55",
  },
  {
    tagline: "Signature Service 02",
    title: "Campaign Creative Direction",
    teaser:
      "Build a launch moment with art direction that keeps pace with trend cycles while feeling undeniably you.",
    detail:
      "From casting briefs to set styling, we orchestrate visuals that move with rhythm across print, social, and runway.",
    highlights: ["Concept moodboards", "Casting support", "On-set styling"],
    imageLabel: "Placeholder image — Studio lighting set",
    gradient:
      "from-brand-secondary/70 via-brand-secondary-pop/55 to-brand-primary/50",
  },
];
---

<Layout title="White Poplin Shirt — Fashion Forward Services">
  <PageWrapper active="home" mainId="top" contentClass="flex flex-col gap-16">
    <section class="space-y-16">
      <div class="max-w-3xl space-y-5">
        <p
          class="text-brand-secondary text-xs font-medium tracking-[0.28em] uppercase"
        >
          Our Services
        </p>
        <h1
          class="text-4xl font-semibold tracking-tight text-neutral-950 sm:text-5xl"
        >
          Fashion-forward storytelling for brands and bold individuals.
        </h1>
        <p class="text-brand-body text-lg leading-relaxed">
          Explore curated offerings that blend trend intelligence with timeless
          composition. Each service flexes to your rhythm, supported by
          stylists, art directors, and tailors ready to bring the vision to
          life.
        </p>
      </div>

      <div class="space-y-16">
        {
          services.map((service, index) => {
            const isOdd = index % 2 === 1;
            return (
              <article
                class={`grid gap-10 rounded-3xl p-8 shadow-[0_16px_40px_rgba(31,42,36,0.08)] ring-1 sm:p-10 lg:grid-cols-2 lg:items-center ${
                  isOdd
                    ? "bg-brand-secondary-wash ring-brand-secondary-ring/80"
                    : "bg-brand-primary-soft ring-brand-rose-ring/80"
                }`}
              >
                <div class={`order-1 ${isOdd ? "lg:order-2" : "lg:order-1"}`}>
                  <div
                    class={`relative aspect-[4/3] overflow-hidden rounded-[2rem] bg-gradient-to-br shadow-xl ${service.gradient}`}
                  >
                    <div class="absolute inset-0 flex flex-col justify-between p-6">
                      <span class="w-max rounded-full bg-white/25 px-4 py-1 text-xs font-medium tracking-[0.28em] text-white/90 uppercase">
                        Placeholder
                      </span>
                      <span class="text-sm font-medium text-white/80">
                        {service.imageLabel}
                      </span>
                    </div>
                  </div>
                </div>
                <div
                  class={`order-2 space-y-5 ${isOdd ? "lg:order-1" : "lg:order-2"}`}
                >
                  <p class="text-brand-secondary text-xs font-medium tracking-[0.28em] uppercase">
                    {service.tagline}
                  </p>
                  <h2 class="text-3xl font-semibold tracking-tight text-neutral-950 sm:text-4xl">
                    {service.title}
                  </h2>
                  <p class="text-brand-ink-strong text-base leading-relaxed">
                    {service.teaser}
                  </p>
                  <p class="text-brand-ink-muted text-base leading-relaxed">
                    {service.detail}
                  </p>
                  <ul class="flex flex-wrap gap-3">
                    {service.highlights.map((highlight) => (
                      <li>
                        <span class="border-brand-highlight-border bg-brand-highlight-bg text-brand-highlight-text inline-flex items-center rounded-full border px-4 py-2 text-xs font-medium tracking-[0.26em] uppercase">
                          {highlight}
                        </span>
                      </li>
                    ))}
                  </ul>
                </div>
              </article>
            );
          })
        }
      </div>
    </section>

    <section id="contact" class="w-full max-w-5xl self-center">
      <ConsultationForm
        title="Let's Connect"
        header="Shape your next fashion story with us"
        subtext={"Tell us a little about you, your audience, and the moments you want to design. We'll craft a tailored proposal within two business days."}
      />
    </section>
  </PageWrapper>
</Layout>
